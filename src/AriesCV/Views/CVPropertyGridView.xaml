<UserControl x:Class="AriesCV.Views.CVPropertyGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cvControl="clr-namespace:Aries.Control.CvControl;assembly=Aries.Control"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400"
             Width="400"
             DataContext="{Binding Testmodel,Source={StaticResource Locator}}">
    <cvControl:CvPropertyGrid x:Name="PropertyGrid" 
                              SelectedObject="{Binding}"/>
</UserControl>
