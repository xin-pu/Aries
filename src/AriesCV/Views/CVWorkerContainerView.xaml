<UserControl x:Class="AriesCV.Views.CVWorkerContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:AriesCV.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:graphx="http://schemas.panthernet.ru/graphx/" xmlns:viewModel="clr-namespace:AriesCV.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="766" d:DesignWidth="1360"
             DataContext="{Binding CvWorkerContainerModel,Source={StaticResource Locator}}">
    
    <DockPanel>
        <views:CVMenuSystemView DockPanel.Dock="Top"/>

        <views:CVStatusBarView DockPanel.Dock="Bottom">
          
        </views:CVStatusBarView>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0">
                <Border.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/Resource/Graph/CVGraphXTemplate.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Border.Resources>
                <hc:TabControl ShowCloseButton="True"
                               ShowOverflowButton="True"
                               IsAnimationEnabled="True"
                               Name="GraphCVTabs"
                               ItemsSource="{Binding CVWorkerItems}"
                               SelectedItem="{Binding CVWorkerItem}"
                               SelectionChanged="GraphCVTabs_SelectionChanged"  >
                   
                    <hc:TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </hc:TabControl.ItemTemplate>
                    <hc:TabControl.ContentTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource CloudGroundBrush}" >
                                <graphx:ZoomControl Name="ZoomControl" 
                                    Background="Transparent"
                                                IsAnimationEnabled="False">
                                    <viewModel:GraphCVArea x:Name="GraphCVArea"
                                                           Tag="{Binding Name}"/>
                                </graphx:ZoomControl>
                            </Border>
                        </DataTemplate>
                    </hc:TabControl.ContentTemplate>
                </hc:TabControl>
            </Border>

            <Border Width="Auto" 
                    Grid.Column="1"
                    Margin="1"
                    BorderThickness="0" 
                    Background="White"
                    Effect="{DynamicResource EffectShadow1}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" 
                                Orientation="Horizontal"
                                Height="40">

                        <Label FontSize="15"
                               Content="Hello"
                               BorderThickness="0"
                               Visibility="{Binding ElementName=TabItemShow,Path=IsChecked,Converter={StaticResource Boolean2VisibilityConverter}}"/>

                        <ToggleButton Style="{DynamicResource ToggleButtonSwitch}"
                                      Name="TabItemShow"
                                      IsChecked="True"/>

                    </StackPanel>


                    <TabControl TabStripPlacement="Left" Name="LeftTabControl"
                                FontFamily="/Resource/#iconfont"
                                FontSize="15"
                                FontWeight="DemiBold">
                        <TabItem Header="&#xf06c;"
                                 ToolTip="CV Tool Kit">
                            <views:CVToolKitView 
                                Background="Transparent"
                                Visibility="{Binding ElementName=TabItemShow,Path=IsChecked,Converter={StaticResource Boolean2VisibilityConverter}}"/>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </Border>
        </Grid>






    </DockPanel>
</UserControl>
