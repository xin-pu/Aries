<hc:Window x:Class="Aries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:graphx="http://schemas.panthernet.ru/graphx/"
        xmlns:controls="clr-namespace:Aries.Controls"
        xmlns:core="clr-namespace:Aries.Core"
        mc:Ignorable="d"
        Height="768" Width="1366"
        Icon="Aries.ico"
        ShowTitle="True"
        ShowNonClientArea="True"
        WindowState="Maximized"
        Background="White">
    <hc:Window.NonClientAreaContent>
        <StackPanel Height="35" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="Aries" Foreground="{DynamicResource PrimaryBrush}" 
                       FontSize="15"
                       TextAlignment="Center"
                       VerticalAlignment="Center">
            </TextBlock>
        </StackPanel>
    </hc:Window.NonClientAreaContent>
    <DockPanel>
        <StatusBar DockPanel.Dock="Top" >
            <TabControl DockPanel.Dock="Top" Height="100">
                <TabItem Header="文件" FontSize="13"/>
                <TabItem Header="开始" FontSize="13"/>
                <TabItem Header="页面样式" FontSize="13">
                    <StatusBar VerticalAlignment="Stretch">
                        <StatusBarItem>
                            <StackPanel Orientation="Horizontal">
                                <controls:TabButton Content="背景颜色" Icon="&#xf06c;"/>
                                <controls:TabButton Content="背景图片" Icon="&#xf06c;"/>
                                <controls:TabButton Content="移除背景" Icon="&#xf06c;"/>
                            </StackPanel>
                        </StatusBarItem>

                        <Separator Background="Black"/>
                        <StatusBarItem>
                            <StackPanel Orientation="Horizontal">
                                <controls:TabButton Content="水印" Icon="&#xf06c;"/>
                                <controls:TabButton Content="移除水印" Icon="&#xf06c;"/>
                            </StackPanel>
                        </StatusBarItem>
                    </StatusBar>
                </TabItem>
                <TabItem Header="视图" FontSize="13">
                    <StatusBar VerticalAlignment="Stretch">
                        <StatusBarItem>
                            <StackPanel Orientation="Horizontal">
                                <controls:TabButton Content="居中对齐" Icon="&#xf06c;"/>
                            </StackPanel>
                        </StatusBarItem>
                        
                      
                        
                    </StatusBar>
                </TabItem>
                <TabItem Header="帮助" FontSize="13"/>
            </TabControl>
        </StatusBar>


        <StatusBar DockPanel.Dock="Bottom" 
                   Height="40" BorderThickness="0,1,0,0">

        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1" 
                    BorderBrush="{DynamicResource PrimaryBrush}" 
                    Grid.Column="0">
                <Border.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="/Template/GraphTemplate/CVGraphXTemplate.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Border.Resources>
                <Grid>
                    <hc:Watermark Name="Watermark"
                                  FontSize="100"
                                  FontWeight="Bold"
                                  MarkMargin="30"
                                  Angle="45"
                                  Opacity="0.2"
                                  MarkBrush="Gray"
                                  Mark="Aries"/>
                    <graphx:ZoomControl Background="Transparent" x:Name="dg_zoomctrl">
                        <core:GraphAreaCV x:Name="dg_Area"/>
                    </graphx:ZoomControl>
                </Grid>

            </Border>
            <GridSplitter Grid.Column="0" 
                          Width="5" 
                          Background="{DynamicResource PrimaryBrush}"
                          Margin="2"/>

            <TabControl Grid.Column="1"
                        TabStripPlacement="Left">
                <TabItem Header="工具" ToolTip="Tool Kit" DataContext="{Binding ToolKitManager}" >
                    <TreeView VerticalAlignment="Stretch" Name="TreeView_ToolKit" 
                              ItemsSource="{Binding BlockToolKitStructs}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type core:ToolKitGroupByType}" ItemsSource="{Binding ToolKitStructs}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding GroupName,StringFormat='{}&#xef8c;  {0}'}" Style="{DynamicResource FIconStyle}"
                                               FontSize="13"
                                               HorizontalAlignment="Left"
                                               Grid.Column="0"/>
                                    <TextBlock Text="{Binding ToolKitStructs.Count}" 
                                               Grid.Column="1"/>
                                </Grid>
                            </HierarchicalDataTemplate>
                            <DataTemplate DataType="{x:Type core:ToolKitStruct}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </TabItem>
                <TabItem Header="属性">

                    <hc:PropertyGrid/>
                </TabItem>
                <TabItem Header="历史">

                </TabItem>

                <TabItem Header="记录">

                </TabItem>

            </TabControl>
        </Grid>


    </DockPanel>
</hc:Window>
